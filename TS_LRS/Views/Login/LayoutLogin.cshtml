@model TS_LRS.Models.Login.LoginUser;
@{
    Layout = null;
}
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Layout Login Page</title>
    <link href="~/logincss/css.css" rel="stylesheet" />
    <link href="~/logincss/font-awesome.min.css" rel="stylesheet" />
    <link href="~/logincss/style.css" rel="stylesheet" id="bootstrapcss" />
    <style>
        body {
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="container ">
            <div class="row">
                <div class="col-md-6 login-form-1">

                    <div class="logo">
                        <img src="images/Telanganalogo.png" alt="telangana logo">
                        <h1><span>Government of Telangana </span>Layout Regularisation Scheme 2020</h1>
                    </div>
                    @*  <a target="_blank" href='Home.aspx'>Home</a>*@

                </div>
                <div class="col-md-6 login-form-2">
                    <h3>User Login </h3>
                    @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @id = "Save_LoginForm" }))
                    {
                        <div class="form-group mb-3">
                            <label asp-for="USRNAME">User Name</label>
                            <input type="text" asp-for="USRNAME" class="form-control" name="USRNAME" placeholder="Username" required />
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="PASSWORD">Password</label>
                            <input type="password" asp-for="PASSWORD" class="form-control" name="PASSWORD" placeholder="PASSWORD" required />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary rounded submit px-3">Sign In</button>
                        </div>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <p class="text-center text-white pt-3">
                        Designed & Developed by : <a href="https://www.cgg.gov.in">
                            <img src="images/cgg_logo.png" height="30px">
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>